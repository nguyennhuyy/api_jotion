// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  fullname String
  phone   String
  password String
  address String
  typeLogin String?
  createdAt DateTime?
  updatedAt DateTime?
}

model GeneratorOtp {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  type String
  otp String
  createdAt DateTime
  updatedAt DateTime
}